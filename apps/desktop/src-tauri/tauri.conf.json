{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gamehost ONE",
  "version": "0.4.0",
  "identifier": "com.gamehost.one",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Gamehost ONE",
        "width": 1200,
        "height": 800,
        "devtools": true,
        "decorations": false,
        "transparent": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
